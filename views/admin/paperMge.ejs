<!-- 内容区域 -->
<style>
.am-selected-group {
    width: 527.5px;
}
.background-deloge{
	background-color: rgb(248, 248, 248);
}
</style>
<script src="/angular/paper_controller.js"></script>
<div class="row" ng-controller="adminPaper">
	<div class="am-u-sm-12 am-u-md-12 am-u-lg-12">
		<div class=" background-deloge widget am-cf">
			<div class="widget-head am-cf">
				<div class="widget-title  am-cf">论文列表</div>
			</div>
			<div class="widget-body  am-fr">

				<div class="am-u-sm-12 am-u-md-6 am-u-lg-6">
					<div class="am-form-group">
						<div class="am-btn-toolbar">
							<div class="am-btn-group am-btn-group-xs">
								<a  data-am-modal="{target: '#addNewPaper'}" type="button" class="am-btn am-btn-default am-btn-success"><span class="am-icon-plus"></span> 新增</a>
								
							</div>
						</div>
					</div>
				</div>
				<div class="am-u-sm-12 am-u-md-6 am-u-lg-3">
					<div class="am-form am-form-group tpl-table-list-select">
						<select data-am-selected="{btnSize: 'sm'}">
						<option >请选择研究方向</option>
						  <option value="{{direction._id}}" ng-repeat="direction in directions">{{direction.name}}</option>
						</select>
					</div>
				</div>
				<div class="am-u-sm-12 am-u-md-12 am-u-lg-3">
					<div class="am-input-group am-input-group-sm tpl-form-border-form cl-p">
						<input type="text" class="am-form-field ">
						<span class="am-input-group-btn">
						<button class="am-btn  am-btn-default am-btn-success tpl-table-list-field am-icon-search" type="button"></button>
						</span>
					</div>
				</div>

				<div class="am-u-sm-12">
					<table width="100%" class="am-table am-table-compact am-table-striped tpl-table-black " id="example-r">
						<thead>
							<tr>
								<th>论文名称</th>
                                <th>作者</th>
                                <th>研究方向</th>
								<th>发表日期</th>
                                <th>会议/刊物</th>
								<th>操作</th>
							</tr>
						</thead>
						<tbody>
							<tr class="gradeX" ng-repeat="paper in data">
								<td>{{paper.name}}</td>
								<td>
                                <span class="am-badge am-round" ng-repeat="person in paper.author">{{ person.name}}</span>
                                </td>
								<td>{{paper.direction.name}}</td>
								<td>{{paper.publish_time | date:"yyyy-MM-dd"}}</td>
                                <td>{{ paper.type.abbreviation }}</td>
								<td>
									<div class="tpl-table-black-operation">
										<a data-whatever="{{paper._id}}" data-am-modal="{target: '#addNewPaper'}">
											<i class="am-icon-pencil"></i> 编辑
										</a>
										<a href="javascript:;" class="tpl-table-black-operation-del" ng-click="delOneItem(paper._id)">
											<i class="am-icon-trash"></i> 删除
										</a>
                                        <a href="/admin/manage/paper/picture?id={{ paper.file_path}}" target="_blank" > <i class="am-icon-paperclip"></i> 查看原件</a>
									</div>
								</td>
							</tr>
							<!-- more data -->
						</tbody>
					</table>
				</div>
				<div class="am-u-lg-12 am-cf">
					<% include pagination%>
				</div>
			</div>
		</div>
	</div>
	
	<!--添加新用户模态窗口-->
    <div class="am-modal" tabindex="-1" id="addNewPaper">
	  <div class="am-modal-dialog">
        <div class="widget am-cf">
            <div class="widget-head am-cf">
                <div class="widget-title am-fl">论文信息</div>
                <div class="widget-function am-fr">
                   <a href="javascript: void(0)" class="am-close am-close-spin" data-am-modal-close>&times;</a>
                </div>
            </div>
            <div class="widget-body am-fr">
                <form class="am-form tpl-form-border-form tpl-form-border-br" name="myForm" ng-submit="processForm(myForm.$valid)">
                    <div class="am-form-group">
                        <label for="name" class="am-u-sm-3 am-form-label">题名<span class="tpl-form-line-small-title"></span></label>
                        <div class="am-u-sm-9">
                            <input type="text" class="tpl-form-input" name="name" ng-model="formData.name" placeholder="请输入题名">
                        </div>
                    </div>
                    <div class="am-form-group">
                        <label for="author" class="am-u-sm-3 am-form-label">作者<span class="tpl-form-line-small-title"></span></label>
                        <div class="am-u-sm-9">
                            <select multiple data-am-selected="{btnSize: 'sm',btnWidth:'100%',searchBox:1}" ng-model="formData.author">
                              <option  value="{{person._id}}" ng-repeat="person in persons">{{person.name + " "+person.english_name}}</option>
                            </select> 
                        </div>
                    </div>
                    <div class="am-form-group">
                        <label for="direction" class="am-u-sm-3 am-form-label">研究方向<span class="tpl-form-line-small-title"></span></label>
                        <div class="am-u-sm-9">
                            <select data-am-selected="{btnSize: 'sm',btnWidth:'100%'}" ng-model="formData.direction">
							  <option value="{{direction._id}}" ng-repeat="direction in directions">{{direction.name}}</option>
							</select>
                        </div>
                    </div>
                    <div class="am-form-group">
                        <label for="publish_time" class="am-u-sm-3 am-form-label">发表日期<span class="tpl-form-line-small-title"></span></label>
                        <div class="am-u-sm-9">
                            <input type="text"  class="am-form-field" id="publish_time"  ng-model="formData.publish_time"  placeholder="选择发表日期" date-format  readonly required />
                        </div>
                    </div>
                     <div class="am-form-group">
                        <label for="type" class="am-u-sm-3 am-form-label">会议/刊物<span class="tpl-form-line-small-title"></span></label>
                        <div class="am-u-sm-9">
                            <select data-am-selected="{btnSize: 'sm',btnWidth:'100%'}" ng-model="formData.type">
                              <option value="{{type._id}}" ng-repeat="type in types">{{type.abbreviation +" "+type.name}}</option>
                            </select>
                        </div>
                    </div>
                    <div class="am-form-group">
                        <label for="wos_number" class="am-u-sm-3 am-form-label">SCI索引号<span class="tpl-form-line-small-title"></span></label>
                        <div class="am-u-sm-9"> 
                            <input type="text" class="tpl-form-input" ng-model="formData.wos_number"  placeholder="请输入SCI索引号">
                        </div>
                    </div>
                    <div class="am-form-group">
                        <label for="ei_number" class="am-u-sm-3 am-form-label">EI索引号<span class="tpl-form-line-small-title"></span></label>
                        <div class="am-u-sm-9">
                            <input type="text" class="tpl-form-input" name="ei_number" ng-model="formData.ei_number" placeholder="请输入EI索引号">
                        </div>
                    </div>
                     <div class="am-form-group">
                        <label for="project" class="am-u-sm-3 am-form-label">标注项目资助<span class="tpl-form-line-small-title"></span></label>
                        <div class="am-u-sm-9">
                            <select multiple data-am-selected="{btnSize: 'sm',btnWidth:'100%',searchBox:1}" ng-model="formData.project">
                              <option  value="{{project._id}}" ng-repeat="project in projects">{{project.number + " "+project.name}}</option>
                            </select> 
                        </div>
                    </div>
                    <div class="am-form-group">
                        <label for="comments" class="am-u-sm-3 am-form-label">备注<span class="tpl-form-line-small-title"></span></label>
                        <div class="am-u-sm-9">
                            <input type="text" class="tpl-form-input" name="comments" ng-model="formData.comments" placeholder="请输入备注">
                        </div>
                    </div>
                    <div class="am-form-group am-form-file">
                        <label for="file_path" class="am-u-sm-3 am-form-label">上传原件<span class="tpl-form-line-small-title"></span></label>
                        <input id="doc-form-file" type="file" file-model="formData.file">
                        <div class="am-u-sm-9">
                        <input id="file-list" type="text" class="tpl-form-input" placeholder="点击选择文件">
                        </div>
                    </div>
                    
                    <div class="am-form-group">
                        <div class="am-u-sm-9 am-u-sm-push-3">
                            <button type="submit" class="am-btn am-btn-primary tpl-btn-bg-color-success " >提交</button>
                        </div>
                    </div>
                </form>
            </div>
	    </div>
	  </div>
	</div>
</div>

