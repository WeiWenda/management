<!-- 内容区域 -->
<style>
.am-selected-group {
    width: 527.5px;
}
.background-deloge{
	background-color: rgb(248, 248, 248);
}
</style>
<script src="/angular/project_controller.js"></script>
<div class="row" ng-controller="adminProject">
	<div class="am-u-sm-12 am-u-md-12 am-u-lg-12">
		<div class=" background-deloge widget am-cf">
			<div class="widget-head am-cf">
				<div class="widget-title  am-cf">科研项目列表</div>
			</div>
			<div class="widget-body  am-fr">

				<div class="am-u-sm-12 am-u-md-6 am-u-lg-6">
					<div class="am-form-group">
						<div class="am-btn-toolbar">
							<div class="am-btn-group am-btn-group-xs">
								<a  data-am-modal="{target: '#addNewProject'}" type="button" class="am-btn am-btn-default am-btn-success"><span class="am-icon-plus"></span> 新增</a>
								
							</div>
						</div>
					</div>
				</div>
				<div class="am-u-sm-12 am-u-md-6 am-u-lg-3">
					<div class="am-form am-form-group tpl-table-list-select">
						<select data-am-selected="{btnSize: 'sm'}">
						<option >请选择研究方向</option>
						  <option value="{{direction._id}}" ng-repeat="direction in directions">{{direction.name}}</option>
						</select>
					</div>
				</div>
				<div class="am-u-sm-12 am-u-md-12 am-u-lg-3">
					<div class="am-input-group am-input-group-sm tpl-form-border-form cl-p">
						<input type="text" class="am-form-field ">
						<span class="am-input-group-btn">
						<button class="am-btn  am-btn-default am-btn-success tpl-table-list-field am-icon-search" type="button"></button>
						</span>
					</div>
				</div>

				<div class="am-u-sm-12">
					<table width="100%" class="am-table am-table-compact am-table-striped tpl-table-black " id="example-r">
						<thead>
							<tr>
                            <th> 项目编号</th>
								<th>项目名称</th>
                                <th>负责人</th>
                                <th>项目类型</th>
                                <th>起始时间</th>
								<th>截止时间</th>
								<th>操作</th>
							</tr>
						</thead>
						<tbody>
							<tr class="gradeX" ng-repeat="project in data">
                                <td>{{project.number}}</td>
								<td>{{project.name}}</td>
								<td>{{ project.principal.name}}</td>
                                <td>{{ project.type.name }}</td>
								<td>{{project.start_time | date:"yyyy-MM-dd"}}</td>
								<td>{{project.end_time | date:"yyyy-MM-dd"}}</td>
								<td>
									<div class="tpl-table-black-operation">
										<a data-whatever="{{project._id}}" data-am-modal="{target: '#addNewProject'}">
											<i class="am-icon-pencil"></i> 编辑
										</a>
										<a href="javascript:;" class="tpl-table-black-operation-del" ng-click="delOneItem(project._id)">
											<i class="am-icon-trash"></i> 删除
										</a>
									</div>
								</td>
							</tr>
							<!-- more data -->
						</tbody>
					</table>
				</div>
				<div class="am-u-lg-12 am-cf">
					<% include pagination%>
				</div>
			</div>
		</div>
	</div>
	
	<!--添加新用户模态窗口-->
    <div class="am-modal" tabindex="-1" id="addNewProject">
	  <div class="am-modal-dialog">
        <div class="widget am-cf">
            <div class="widget-head am-cf">
                <div class="widget-title am-fl">项目信息</div>
                <div class="widget-function am-fr">
                   <a href="javascript: void(0)" class="am-close am-close-spin" data-am-modal-close>&times;</a>
                </div>
            </div>
            <div class="widget-body am-fr">
                <form class="am-form tpl-form-border-form tpl-form-border-br" name="myForm" ng-submit="processForm(myForm.$valid)">
                    <div class="am-form-group">
                        <label for="name" class="am-u-sm-3 am-form-label">项目名称<span class="tpl-form-line-small-title"></span></label>
                        <div class="am-u-sm-9">
                            <input type="text" class="tpl-form-input" name="name" ng-model="formData.name" placeholder="请输入项目名称">
                        </div>
                    </div>
                    <div class="am-form-group">
                        <label for="principal" class="am-u-sm-3 am-form-label">负责人<span class="tpl-form-line-small-title"></span></label>
                        <div class="am-u-sm-9">
                            <select data-am-selected="{btnSize: 'sm',btnWidth:'100%'}" ng-model="formData.principal">
                              <option  value="{{person._id}}" ng-repeat="person in persons">{{person.name + " "+person.english_name}}</option>
                            </select> 
                        </div>
                    </div>
                    <div class="am-form-group">
                        <label for="type" class="am-u-sm-3 am-form-label">项目类型<span class="tpl-form-line-small-title"></span></label>
                        <div class="am-u-sm-9">
                            <select data-am-selected="{btnSize: 'sm',btnWidth:'100%'}" ng-model="formData.type">
                              <option  value="{{type._id}}" ng-repeat="type in types">{{type.name}}</option>
                            </select> 
                        </div>
                    </div>
                    <div class="am-form-group">
                        <label for="start_time" class="am-u-sm-3 am-form-label">起始日期<span class="tpl-form-line-small-title"></span></label>
                        <div class="am-u-sm-9">
                            <input type="text"  class="am-form-field" id="start_time"  ng-model="formData.start_time"  placeholder="选择起始日期" date-format  readonly required />
                        </div>
                    </div>
                     <div class="am-form-group">
                        <label for="end_time" class="am-u-sm-3 am-form-label">截止日期<span class="tpl-form-line-small-title"></span></label>
                        <div class="am-u-sm-9">
                            <input type="text" id="end_time" ng-model="formData.end_time" format-date class="am-form-field" placeholder="选择截止日期" date-format readonly required/>
                        </div>
                    </div>
                    <div class="am-form-group">
                        <label for="number" class="am-u-sm-3 am-form-label">项目编号<span class="tpl-form-line-small-title"></span></label>
                        <div class="am-u-sm-9"> 
                            <input type="text" class="tpl-form-input"name="number"  ng-model="formData.number"  placeholder="请输入项目编号">
                        </div>
                    </div>
                   
                    <div class="am-form-group">
                        <label for="money" class="am-u-sm-3 am-form-label">项目经费<span class="tpl-form-line-small-title"></span></label>
                        <div class="am-u-sm-9">
                            <input type="text" class="tpl-form-input" ng-model="formData.money" placeholder="请输入项目经费">
                        </div>
                    </div>
                    <div class="am-form-group">
                        <label for="comments" class="am-u-sm-3 am-form-label">备注<span class="tpl-form-line-small-title"></span></label>
                        <div class="am-u-sm-9">
                            <input type="text" class="tpl-form-input" name="comments" ng-model="formData.comments" placeholder="请输入备注">
                        </div>
                    </div>
                    <div class="am-form-group">
                        <div class="am-u-sm-9 am-u-sm-push-3">
                            <button type="submit" class="am-btn am-btn-primary tpl-btn-bg-color-success " >提交</button>
                        </div>
                    </div>
                </form>
            </div>
	    </div>
	  </div>
	</div>
</div>

